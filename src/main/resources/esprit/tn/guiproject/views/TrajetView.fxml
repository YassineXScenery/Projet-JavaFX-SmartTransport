<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="esprit.tn.guiproject.controllers.TrajetController" spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="15" bottom="20" left="15"/>
    </padding>
    <Label text="Trajet Management" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Start Point ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="routeStartPointField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250"/>
        <Label text="End Point ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="routeEndPointField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>
        <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
            <Button fx:id="addRouteButton" text="Add" prefWidth="90"/>
            <Button fx:id="updateRouteButton" text="Update" prefWidth="90"/>
            <Button fx:id="clearRouteButton" text="Clear" prefWidth="90"/>
            <Button fx:id="selectRouteButton" text="Select on Map" prefWidth="120"/>
        </HBox>
    </GridPane>
    <TableView fx:id="routeTable" prefHeight="350" prefWidth="600">
        <columns>
            <TableColumn fx:id="routeIdColumn" text="ID" prefWidth="70"/>
            <TableColumn fx:id="routeDistanceColumn" text="Distance" prefWidth="120"/>
            <TableColumn fx:id="routeStartPointColumn" text="Start Point" prefWidth="130"/>
            <TableColumn fx:id="routeEndPointColumn" text="End Point" prefWidth="130"/>
            <TableColumn fx:id="routeTimeColumn" text="Estimated Time" prefWidth="150"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="deleteRouteButton" text="Delete Selected" prefWidth="180"/>
        <Button fx:id="removeAllButton" text="Remove All" prefWidth="180" onAction="#removeAll"/>
    </HBox>
</VBox>