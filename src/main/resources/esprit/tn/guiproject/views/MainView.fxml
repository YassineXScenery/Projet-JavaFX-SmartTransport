<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox fx:id="mainVBox" spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <!-- Map Section -->
            <BorderPane fx:id="mapPane" prefHeight="400" minHeight="400" maxHeight="400" style="-fx-background-color: #ffffff;"/>

            <!-- CRUD Section for Trajet and POI -->
            <HBox fx:id="crudHBox" spacing="30" alignment="CENTER" style="-fx-padding: 20;"/>

            <!-- Tables Section for Trajet and POI -->
            <HBox fx:id="tablesHBox" spacing="30" alignment="CENTER" style="-fx-padding: 20;"/>
        </VBox>
    </content>
</ScrollPane>